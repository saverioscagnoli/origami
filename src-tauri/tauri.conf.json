{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "origami",
    "version": "0.0.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "origami.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "Switch window",
        "label": "window-switcher",
        "width": 700,
        "height": 400,
        "decorations": false,
        "center": true,
        "alwaysOnTop": true,
        "visible": false,
        "url": "html/index.html"
      },
      {
        "fullscreen": false,
        "resizable": false,
        "title": "Select monior",
        "label": "monitor-selector",
        "width": 300,
        "height": 300,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": false,
        "url": "html/monitor-selector.html"
      },
      {
        "fullscreen": false,
        "resizable": false,
        "title": "Select monior",
        "label": "window-selector",
        "width": 300,
        "height": 300,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": false,
        "url": "html/window-selector.html"
      }
    ]
  }
}
